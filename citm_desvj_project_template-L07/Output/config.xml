<config>
	<app>
		<title>The Toy Box by Fun Makers Studio</title>
		<organization>UPC</organization>
		<frcap value ="16" value2 ="33"/>
	</app>

	<renderer>
		<vsync value ="false"/>
	</renderer>

	<window>
		<resolution width="1280" height="720" scale="1"/>
		<fullscreen value="false"/>
		<borderless value="false"/>
		<resizable value="false"/>
		<fullscreen_window value="false"/>
	</window>

	<audio>
		<music volume="40"/>
		<fx volume="50"/>
	</audio>

	<ui>
		<font1 texturepath="Assets/Textures/font1.png"/>
		<font2 texturepath="Assets/Textures/font2.png"/>
		<font2Red texturepath="Assets/Textures/font2_red.png"/>
	</ui>

	<logo>
		<backgroundimage texturepath="Assets/Textures/SceneLogo/logo.png"/>
		<music musicPath="Assets/Audio/Music/logoedit.ogg"/>
	</logo>

	<title>
		<backgroundimage texturepath="Assets/Textures/SceneTitle/title.png"/>
		<popImage settingtexturepath="Assets/Textures/SceneTitle/Settings/SettingsMenu.png" creditstexturepath="Assets/Textures/SceneTitle/Credits/CreditsMenu.png"/>
		<music musicPath="Assets/Audio/Music/title_screen.ogg"/>
		<startsfx startSFXPath="Assets/Audio/Fx/start_game.wav"/>
		<selectsfx selectSFXPath="Assets/Audio/FX/menu_selection.wav"/>
	</title>

	<scene>
		<originTexture origintexturePath = "Assets/Maps/x.png" />
		<checkpoint checkpointPath = "Assets/Maps/Tileset_CheckPoints.png" />
		<pathfinding  slimePathTile="Assets/Textures/Slime/path.png" />
		<music musicPath="Assets/Audio/Music/song1.ogg" />
		<imgPause imgPausePath="Assets/UI/PauseMenu/PauseMenuTemplate.png"/>
		<scenesfx selectSFXPath="Assets/Audio/Fx/select.wav" />
		<slimesfx stompSFXPath="Assets/Audio/Fx/stomp.wav" powerUpSFXPath="Assets/Audio/Fx/powerUp.wav" slimeHitSFXPath="Assets/Audio/Fx/slime_hit.wav" />
		<batsfx batHitSFXPath="Assets/Audio/Fx/bat_hit.wav"/>
		<player x="224" y="530" texturepath="Assets/Textures/PlayerJones.png"/>
		<coin x="704" y="300" texturepath="Assets/Textures/bitcoin.png"/>
		<coin x="1312" y="250" texturepath="Assets/Textures/bitcoin.png"/>
		<coin x="2192" y="430" texturepath="Assets/Textures/bitcoin.png"/>
		<coin x="2928" y="150" texturepath="Assets/Textures/bitcoin.png"/>
		<life x="230" y="400" iType ="life" texturepath="Assets/Textures/GUI/life.png"/>
		<life x="1550" y="250" iType ="life" texturepath="Assets/Textures/GUI/life.png"/>
		<life x="3000" y="170" iType ="life" texturepath="Assets/Textures/GUI/life.png"/>
		<npc x="300" y="339" texturepath="Assets/Textures/SceneGame/NPCs.png" id="1" character="3" dialogueid="0"/>
		<npc x="200" y="150" texturepath="Assets/Textures/SceneGame/NPCs.png" id="2" character="2" dialogueid="-1"/>
		<npc x="450" y="400" texturepath="Assets/Textures/SceneGame/NPCs.png" id="3" character="4" dialogueid="-1"/>
		<npc x="350" y="200" texturepath="Assets/Textures/SceneGame/NPCs.png" id="4" character="5" dialogueid="-1"/>
		<bat x="200" y="266" texturepath="Assets/Textures/Bat/Bat_Full.png"/>
	</scene>

	<sceneFight>
		<backgroundimage texturepath="Assets/Textures/SceneCombat/combat.png"/>
		<arrowimage texturepath="Assets/Textures/SceneCombat/cursedArrow.png"/>
		<partymember type="ally" name="mage" maxHp="15" maxMana="30" attack="12" defense="10" speed="50" critRate="15" texturepath="Assets/Textures/SceneGame/NPCs.png"/>
		<partymember type="ally" name="warrior" maxHp="25" maxMana="20" attack="8" defense="30" speed="40" critRate="10" texturepath="Assets/Textures/SceneGame/NPCs.png"/>
		<partymember type="ally" name="assassin" maxHp="20" maxMana="25" attack="10" defense="10" speed="60" critRate="30" texturepath="Assets/Textures/SceneGame/NPCs.png"/>
		<enemykid type="enemy" name="enemykid" maxHp="20" maxMana="25" attack="10" defense="10" speed="20" critRate="30" texturepath="Assets/Textures/SceneGame/NPCs.png"/>
		<enemyshopkeeper type="enemy" name="enemyshopkeeper" maxHp="20" maxMana="25" attack="10" defense="10" speed="20" critRate="30" texturepath="Assets/Textures/SceneGame/NPCs.png"/>
		<enemyclown type="enemy" name="enemyclown" maxHp="20" maxMana="25" attack="10" defense="10" speed="20" critRate="30" texturepath="Assets/Textures/SceneGame/NPCs.png"/>
	</sceneFight>

	<player>
		<SFXset jumpSFXPath="Assets/Audio/Fx/jump.wav" dieSFXPath="Assets/Audio/Fx/death.wav" hurtSFXPath="Assets/Audio/Fx/hurt.wav"
				pickCoinSFXPath="Assets/Audio/Fx/pick_coin.wav" levelCompletedSFXPath="Assets/Audio/Fx/level_completed.wav" selectSFXPath="Assets/Audio/Fx/select.wav"
				shortRangeAttackSFXPath="Assets/Audio/Fx/whip_attack.wav" pickLifeSFXPath="Assets/Audio/Fx/life_up.wav"/>
	</player>

	<ending>
		<backgroundimage texturepath="Assets/Textures/EndingScreen.png"/>
		<music musicPath="Assets/Audio/Music/gameOver.ogg"/>
		<endingsfx startSFXPath="Assets/Audio/Fx/start_game.wav"/>
	</ending>

	<map>
		<mapfolder path="Assets/Maps/"/>
		<mapfile path="Assets/Maps/map_town.tmx"/>
		<house path="Assets/Maps/Town.tmx"/>
	</map>

	<gui>
		<guiButtons buttonsTexPath="Assets/UI/ButtonsSprites/Buttons.png"/>
		
	</gui>

	<dialoguemanager dialogtext="Assets/UI/Dialog/Dialog.png">
		<dialogue id ="0">
			<node id="0" text="BOOBA">
				<option id="0" nextNodeId="1" text="NICE"/>
				<option id="1" nextNodeId="-1" text="WTF"/>
			</node>
			<node id="1" text="JIE JIE JIEEE">
				<option id="0" nextNodeId="-1" text=""/>
			</node>
		</dialogue>
	</dialoguemanager>

</config>
